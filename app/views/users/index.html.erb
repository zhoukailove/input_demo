<h1>用户列表</h1>

<table>
  <% if @users.present? %>
  <tr>
    <th>姓名</th>
    <th>邮箱地址</th>
    <th>手机号码</th>
    <th>状态</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

      <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.mobile %></td>
            <td><%= state_ok(user) %></td>
            <td><%= link_to '查看', user %></td>
            <td><%= link_to '编辑', edit_user_path(user) %></td>
            <td><%= link_to '删除', user, method: :delete, data: {confirm: '确认删除吗?'} %></td>
          </tr>
      <% end %>
  <% else %><tr>暂无用户</tr>

  <% end %>
</table>

